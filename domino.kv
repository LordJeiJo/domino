#:kivy 2.1.0

<DominoTile>:
    background_color: (1, 1, 1, 1)
    color: (0, 0, 0, 1)
    size_hint_y: None
    height: "70dp"
    padding: "8dp"
    canvas.before:
        Color:
            rgba: (0.2, 0.2, 0.2, 1)
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)
            width: 1.2

<DominoGame>:
    orientation: "vertical"
    padding: "16dp"
    spacing: "14dp"

    canvas.before:
        Color:
            rgba: (0.1, 0.3, 0.1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        id: ai_hand
        size_hint_y: None
        height: "80dp"
        spacing: "10dp"

    BoxLayout:
        id: board
        size_hint_y: None
        height: "120dp"
        spacing: "12dp"
        padding: "10dp"

    BoxLayout:
        id: player_hand
        size_hint_y: None
        height: "80dp"
        spacing: "10dp"
